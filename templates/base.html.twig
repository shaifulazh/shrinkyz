<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">

    <title>
        {% block title %}
        Welcome!
        {% endblock %}
    </title>

    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link crossorigin="anonymous" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" rel="stylesheet">
    <link rel="icon" href="{{asset('/images/favicon.png')}}">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no user-scalable=no">
         {# <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'> #}
    {% endblock %}
    {% block head %}

        <style>
        html,body { 
           overflow-x: hidden;
        
        
        }
        body {
            overflow-y: hidden;
        }
        .btn {
            border-radius: 5px;
        }
        
       
        .superdiv {
        

        }
      

        .footer {
            position:relative;
            bottom: 0;
            z-index: 0;
            width:100%;
            height:60px; 
           
        }


  
        .btn-info {
            background-color: #808B96;
        }

        .btn-info:hover {
            background-color: #ABB2B9;
 
        }
        .special-button{
            border : 0.1px solid rgb(255,255,255,0.1);
        }


        
        </style>



            {% endblock %}

</head>

<body>
   
<div class="superdiv">
    {% block model %}{% endblock %}
    
    {% block nav %}
   
    {% include('navbar.html.twig') %}
    {% endblock %}
    {# this handle all the alert in this web #}
    {% for label, messages in app.flashes %}
    {% for message in messages %}
    <div class="container alert alert-{{ label }}">
        {{ message }}
    </div>
    {% endfor %}
    {% endfor %}


        
    {% block body %}
    {% endblock %}
    
   
   
    {% block javascript %}
    {{ encore_entry_script_tags('app') }}



    {% endblock %}


</div>
{% block footer %} 
{{include('footer.html.twig')}}
{% endblock %}
</body>

</html>