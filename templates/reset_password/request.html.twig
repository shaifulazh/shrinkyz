{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container mt-3">
    <div class="row justify-content-md-center">
    <div class="col-12">
    <h3>Reset your password</h3>

    {{ form_start(requestForm) }}

        {{ form_label(requestForm.email)}}
        {{ form_widget(requestForm.email,{'attr' : {'class' : 'form-control','placeholder': 'Email','style': 'width : 15em'}}) }}
        
        <br><div>
            <small>
                Enter your email address and we we will send you a
                link to reset your password.
            </small>
        </div>
    <br>
    <label>Captcha</label>
    <div class="text-danger">
        {{form_errors(requestForm.captcha)}}
    </div>
    <div>

        {{ form_widget(requestForm.captcha,{'attr' : {'class' : 'form-control mt-3 mb-3','placeholder': 'Type the word on image above','style': 'width : 20em'}})}}
        <a href="" class="btn btn-sm btn-info m-y"><i class="fas fa-sync"></i>&nbsp;<span>Refresh</span></a>
        
    </div>
    
    <br>
    
        <button class="btn btn-primary">Send password reset email</button>
    {{ form_end(requestForm) }}
    </div>
    </div>
    </div>
{% endblock %}